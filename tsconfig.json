{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "module": "ESNext",
    "rootDirs": ["./src", "./generated"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,   
    "skipLibCheck": true,
    "strictNullChecks": true
  }
}
